{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "parametric-insurance-frontend/build"
      }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot|json|txt|map))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "CI": "false",
    "REACT_APP_CHAIN_ID": "11155111",
    "REACT_APP_CHAIN_NAME": "Sepolia",
    "REACT_APP_RPC_URL": "https://sepolia.infura.io/v3/1cdfb0cdbac040b89344b6c8df937f89",
    "REACT_APP_CONTRACT_ADDRESS": "0x8B78C834a438Ec7f566806cf61aCfc80eDf69e81",
    "REACT_APP_BACKEND_URL": "https://parametric-insurance.vercel.app"
  },
  "build": {
    "env": {
      "CI": "false",
      "REACT_APP_CHAIN_ID": "11155111",
      "REACT_APP_CHAIN_NAME": "Sepolia", 
      "REACT_APP_RPC_URL": "https://sepolia.infura.io/v3/1cdfb0cdbac040b89344b6c8df937f89",
