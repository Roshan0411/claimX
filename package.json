{
  "name": "parametric-insurance",
  "version": "1.0.0",
  "description": "Decentralized Parametric Insurance Platform",
  "scripts": {
    "install:frontend": "cd parametric-insurance-frontend && npm install",
    "install:backend": "cd parametric-insurance-backend && npm install",
    "install:all": "npm run install:frontend && npm run install:backend",
    "dev:frontend": "cd parametric-insurance-frontend && npm start",
    "dev:backend": "cd parametric-insurance-backend && npm run dev",
    "build": "cd parametric-insurance-frontend && echo CI=false > .env && npm install && npm run build",
    "vercel-build": "cd parametric-insurance-frontend && echo CI=false > .env && npm install && npm run build",
    "start:backend": "cd parametric-insurance-backend && npm start",
    "deploy": "vercel --prod"
  },
  "keywords": ["blockchain", "insurance", "web3", "smart-contracts", "react", "express"],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "form-data": "^4.0.4",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "web3": "^4.2.0"
  }
}
